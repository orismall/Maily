<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="24dp"
        android:padding="16dp"
        android:background="@drawable/compose_card_bg"
        android:elevation="10dp">

        <ImageButton
            android:id="@+id/btnCloseLabel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Cancel"
            android:src="@drawable/ic_close_compose"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Save"
            android:src="@drawable/ic_check"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etLabelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Label name"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:background="@null"
            android:textSize="16sp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnCloseLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            app:layout_constraintTop_toBottomOf="@id/etLabelName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
